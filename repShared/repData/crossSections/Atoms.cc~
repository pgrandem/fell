#include <iostream>
#include <Atom.h>
using namespace std;

class Atom
{
  public : 
  double getMass(); //mass of the atom
  
  double classicalRadius(); // approximated classical radius of atom
  double classicalCrossSection(); // classical approximated cross section
  
  private :
  double m_mass; // mass of the atom
  
}
